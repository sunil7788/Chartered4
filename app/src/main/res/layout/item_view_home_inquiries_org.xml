<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginBottom="5dp"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        app:strokeColor="@color/appDivider"
        app:strokeWidth="1dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:paddingEnd="16dp"
                android:paddingBottom="0dp"
                android:paddingTop="16dp"
                android:paddingStart="16dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtDate"
                        android:text="11 Feb, 8:32"
                        android:textSize="14sp"
                        android:layout_marginEnd="10dp"
                        android:includeFontPadding="false"
                        android:textAppearance="@style/FontPath.Medium"
                        android:textColor="@color/grey900"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/txtAmount"
                        android:text="$89.99"
                        android:textSize="14sp"
                        android:gravity="end"
                        android:includeFontPadding="false"
                        android:textAppearance="@style/FontPath.Medium"
                        android:textColor="@color/grey900"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:gravity="center"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:backgroundTint="@color/secondaryText"
                            android:background="@drawable/ic_kayak"
                            android:layout_width="16dp"
                            android:layout_height="16dp"/>

                        <TextView
                            android:id="@+id/txtBoat"
                            android:text="Kayak"
                            android:textSize="14sp"
                            android:layout_marginStart="5dp"
                            android:includeFontPadding="false"
                            android:textColor="@color/secondaryText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="4dp"
                        android:layout_height="4dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/ic_circle"
                        android:backgroundTint="@color/indicatorUnselected" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:backgroundTint="@color/secondaryText"
                            android:background="@drawable/ic_capacity"
                            android:layout_width="16dp"
                            android:layout_height="16dp"/>

                        <TextView
                            android:id="@+id/txtCapacity"
                            android:text="10"
                            android:textSize="14sp"
                            android:layout_marginStart="5dp"
                            android:includeFontPadding="false"
                            android:textColor="@color/secondaryText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="4dp"
                        android:layout_height="4dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/ic_circle"
                        android:backgroundTint="@color/indicatorUnselected" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:backgroundTint="@color/secondaryText"
                            android:background="@drawable/ic_kids"
                            android:layout_width="16dp"
                            android:layout_height="16dp"/>

                        <TextView
                            android:id="@+id/txtChild"
                            android:text="2"
                            android:textSize="14sp"
                            android:layout_marginStart="5dp"
                            android:includeFontPadding="false"
                            android:textColor="@color/secondaryText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                        android:gravity="center|end"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:backgroundTint="@color/secondaryText"
                            android:background="@drawable/ic_duration"
                            android:layout_width="16dp"
                            android:layout_height="16dp"/>

                        <TextView
                            android:id="@+id/txtDuration"
                            android:text="2 Hr"
                            android:textSize="14sp"
                            android:layout_marginStart="5dp"
                            android:includeFontPadding="false"
                            android:textColor="@color/secondaryText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llExpiresOn"
                android:background="@color/expiresBg"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:gravity="center|start"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:backgroundTint="@color/expires"
                        android:background="@drawable/ic_warn"
                        android:layout_width="16dp"
                        android:layout_height="16dp"/>

                    <TextView
                        android:text="Expires on"
                        android:textSize="12sp"
                        android:layout_marginStart="5dp"
                        android:includeFontPadding="false"
                        android:textColor="@color/expires"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/txtExpiresOn"
                        android:text="Fri, 11 Feb at 8:00 PM"
                        android:textSize="12sp"
                        android:textAppearance="@style/FontPath.SemiBold"
                        android:layout_marginStart="5dp"
                        android:includeFontPadding="false"
                        android:textColor="@color/expires"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>